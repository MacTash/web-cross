# Web-Cross Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# AI/LLM Configuration
# ===========================================

# Groq API Key (recommended for fast inference)
# Get your key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Ollama Configuration (for local AI)
OLLAMA_HOST=http://localhost:11434
WEBCROSS_MODEL=llama3.2:3b

# AI Provider preference: groq, ollama, or auto
# WEBCROSS_AI__PROVIDER=auto

# ===========================================
# Scanner Configuration
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
WEBCROSS_LOG_LEVEL=INFO

# Request timeout in seconds
# WEBCROSS_SCANNER__TIMEOUT=10

# Maximum concurrent threads
# WEBCROSS_SCANNER__THREADS=10

# Requests per second limit
# WEBCROSS_SCANNER__RATE_LIMIT=10

# ===========================================
# Server Configuration
# ===========================================

# Flask server host
WEBCROSS_SERVER__HOST=127.0.0.1

# Flask server port
WEBCROSS_SERVER__PORT=5000

# Secret key for sessions (change in production!)
WEBCROSS_SERVER__SECRET_KEY=change-this-in-production

# Enable debug mode (set to false in production)
# WEBCROSS_SERVER__DEBUG=false

# ===========================================
# Database Configuration
# ===========================================

# SQLite database path
WEBCROSS_DATABASE__URL=sqlite:///data/webcross.db

# ===========================================
# Reporting Configuration
# ===========================================

# Default report format: html, pdf, json
# WEBCROSS_REPORTING__FORMAT=html

# Include compliance mapping in reports
# WEBCROSS_REPORTING__INCLUDE_COMPLIANCE=true

# Company name for reports
# WEBCROSS_REPORTING__COMPANY_NAME=Your Company
